<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xiphone"
    tools:context=".profile.dircard.dircardhistory.CardHistoryFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view_cards_history"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_card_history" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_card_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/ship_item_card_history" />

            <include layout="@layout/ship_item_card_history" />

            <include layout="@layout/ship_item_card_history" />

            <include layout="@layout/ship_item_card_history" />

            <include layout="@layout/ship_item_card_history" />

            <include layout="@layout/ship_item_card_history" />

            <include layout="@layout/ship_item_card_history" />

            <include layout="@layout/ship_item_card_history" />

            <include layout="@layout/ship_item_card_history" />

            <include layout="@layout/ship_item_card_history" />

            <include layout="@layout/ship_item_card_history" />
            <include layout="@layout/ship_item_card_history" />




        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>